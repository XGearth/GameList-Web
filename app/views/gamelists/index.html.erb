<h1> Played Games </h1>

<table>
    <thead>
        <tr>
            <th> Title </th>
            <th> Description </th>
            <th colspan = "3"> Actions </th>
        </tr>
    </thead>

    <tbody>
        <% @gamelists.each do |game| %>
        <tr>
            <td> <%= game.title %> </td>
            <td> <%= game.description %> </td>
            <td> <%= link_to 'Show', gamelist_path(game) %> </td>
            <td> <%= link_to 'Edit', edit_gamelist_path(game) %> </td>
            <td> <%= link_to 'Delete', gamelist_path(game), method: :delete, data: { confirm: "Are You Sure?" } %> </td>
        </tr>
        <% end %>
    </tbody>
</table>

<p>
    <%= link_to 'Enter a New Game', new_gamelist_path %>
</p>