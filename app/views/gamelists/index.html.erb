<h1 class="text-center mt-3 mb-3"> Games Played </h1>

<div class="row ml-1 mr-1">
    <% @gamelists.each do |game| %>

        <div class="col-sm-3 mt-2 mb-2">
            <div class="card">
            <div class="card-body">
                <h5 class="class-title"> <%= game.title %> </h5>
                <p class="card-text"> <%= truncate(game.description) %> </p>
                <%= link_to "View Game Details", gamelist_path(game), class: "btn btn-primary" %>
            </div>
            </div>
        </div>

    <% end %>
</div>